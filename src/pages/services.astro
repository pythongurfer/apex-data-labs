---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import heroImage from '~/assets/images/business_consulting_concept.jpg'; // Importamos la imagen

const metadata = {
  title: 'Services',
  description: 'Explore our data strategy, engineering, and analytics services designed to drive business growth.',
};
---

<Layout metadata={metadata}>

  <Hero
    tagline="Our Services"
    title="Strategic Data Services to Drive Your Business Forward"
    subtitle="We provide end-to-end data solutions, from building robust technical foundations to extracting the critical insights that inform your most important business decisions."
    actions={[{ variant: 'primary', text: 'Get in Touch', href: '/contact' }]}
    image={{ src: heroImage, alt: 'Data strategy session' }}
  />

  <Features2
    title="Our Core Capabilities"
    subtitle="We focus on three key areas to deliver end-to-end data value, from foundational infrastructure to strategic insights."
    columns={1}
    items={[
      {
        title: 'Data Platform & Engineering',
        description:
          'We design and implement modern data platforms on GCP or AWS, using best-in-class tools like dbt and Airflow, and a robust CI/CD process. We build the scalable, reliable foundation that serves as your single source of truth, empowering your entire organization with trustworthy data.',
        icon: 'tabler:database',
      },
      {
        title: 'Data Science & AI Strategy',
        description:
          'We go beyond simple analytics to uncover deep insights. Our services include predictive modeling, forecasting, and the strategic implementation of modern AI applications (like GenAI/RAG) to solve complex business problems, optimize processes, and create a sustainable competitive advantage.',
        icon: 'tabler:brain',
      },
      {
        title: 'Product & Commercial Analytics',
        description:
          'We connect data directly to business outcomes. Through deep analysis of user behavior and market trends, we help inform your product roadmap, pricing strategies, and go-to-market decisions, ensuring that every strategic move is backed by solid data.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <Content
    isReversed
    title="Our Approach: A Partnership for Success"
    subtitle="We believe in a collaborative process that ensures our technical solutions are perfectly aligned with your business objectives."
    items={[
        { title: '1. Discovery & Audit' },
        { title: '2. Strategy & Roadmap' },
        { title: '3. Implementation & Mentoring' },
        { title: '4. Impact Measurement' },
    ]}
    image={{
      src: '~/assets/images/our-approach.jpg', // AsegÃºrate de tener esta imagen
      alt: 'A team collaborating on a whiteboard',
    }}
  />

  <CallToAction
    title="Ready to Unlock the Value of Your Data?"
    subtitle="Contact us today to discuss how a tailored data strategy can transform your business."
    actions={[{ variant: 'primary', text: 'Let\'s Talk', href: '/contact' }]}
  />

</Layout>