---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';

// Updated metadata for a personal portfolio
const metadata = {
  title: 'Contact Me',
  description: "Let's connect. I'm available for new opportunities and collaborations.",
};
---

<Layout metadata={metadata}>
  <!-- HERO SECTION - More personal and inviting -->
  <Hero
    tagline="Contact"
    title="Let's Connect"
    subtitle="I'm always open to discussing new projects, interesting ideas, or opportunities to be part of an ambitious team. The best way to reach me is through email or LinkedIn."
  />

  <!-- FEATURES2 WIDGET - Simplified to direct contact methods -->
  <Features2
    title="Get in Touch Directly"
    columns={2}
    items={[
      {
        title: 'Email',
        description: 'For any inquiries, collaborations, or job opportunities, please send me an email.',
        icon: 'tabler:mail',
        callToAction: {
          text: 'anika.rosenzuaig@gmail.com', // <-- Your actual email address
          href: 'mailto:anika.rosenzuaig@gmail.com', // <-- Creates a clickable email link
        },
      },
      {
        title: 'LinkedIn',
        description: 'Connect with me on LinkedIn to see my professional background and stay updated on my work.',
        icon: 'tabler:brand-linkedin',
        callToAction: {
          text: 'View My Profile',
          href: 'https://linkedin.com/company/apex-data-lab', // <-- IMPORTANT: Replace with your actual LinkedIn profile URL
          target: '_blank',
        },
      },
    ]}
  />
</Layout>